      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.xtext.builder"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.core.filesystem"/>
      <import plugin="org.eclipse.emf.edit"/>
      <import plugin="org.eclipse.xtext.xbase.lib"/>
      <import plugin="org.eclipse.xtext.xtend2.lib"/>
      <import plugin="org.eclipse.compare"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui.workbench.texteditor" version="3.6.0" match="greaterOrEqual"/>
   </requires>

   <plugin
         id="de.sebastianbenz.task"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="de.sebastianbenz.task.ui"
